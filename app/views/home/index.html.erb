          <h3 class="card-title"><%= t('products.starter.name') %></h3>
        </div>
        <div class="card-block">
          <ul class="card-text list-unstyled">
            <li><%= fa_icon 'mobile', text: t('products.features.responsive-design.name'), class: 'fa-fw' %> <%= info_tooltip t('products.features.responsive-design.info') %></li>
            <li><%= fa_icon 'server', text: t('products.features.web-hosting.name'), class: 'fa-fw' %></li>
            <li><%= fa_icon 'link', text: t('products.features.domain.name'), class: 'fa-fw' %></li>
          </ul>
        </div>
        <div class="card-footer">
          <a class="btn btn-primary" href="#contact"><%= t('products.get') %></a>
        </div>
      </div>
    </div>
    <div class="col-lg-4 mb-4">
      <div class="card plan-pro text-center animated infinite pulse">
        <div class="card-header card-inverse">
          <h3 class="card-title"><%= t('products.pro.name') %></h3>
        </div>
        <div class="card-block">
          <ul class="card-text list-unstyled">
            <li><%= fa_icon 'plus', text: t('products.features.starter-plus.name'), class: 'fa-fw' %></li>
            <li><%= fa_icon 'search', text: t('products.features.seo.name'), class: 'fa-fw' %> <%= info_tooltip t('products.features.seo.info') %></li>
            <li><%= fa_icon 'bolt', text: t('products.features.speed.name'), class: 'fa-fw' %></li>
            <li><%= fa_icon 'globe', text: t('products.features.cdn.name'), class: 'fa-fw' %> <%= info_tooltip t('products.features.cdn.info') %></li>
            <li><%= fa_icon 'line-chart', text: t('products.features.analytics.name'), class: 'fa-fw' %> <%= info_tooltip t('products.features.analytics.info') %></li>
            <li><%= fa_icon 'lock', text: t('products.features.tls.name'), class: 'fa-fw' %> <%= info_tooltip t('products.features.tls.info') %></li>
            <li><%= fa_icon 'shield', text: t('products.features.ddos.name'), class: 'fa-fw' %> <%= info_tooltip t('products.features.ddos.info') %></li>
          </ul>
        </div>
        <div class="card-footer">
          <a class="btn btn-primary" href="#contact"><%= t('products.get') %></a>
        </div>
      </div>
    </div>
    <div class="col-lg-4 mb-4">
      <div class="card plan-premium text-center">
        <div class="card-header card-inverse">
          <h3><%= t('products.premium.name') %></h3>
        </div>
        <div class="card-block">
          <ul class="card-text list-unstyled">
            <li><%= fa_icon 'plus', text: t('products.features.pro-plus.name'), class: 'fa-fw' %></li>
            <li><%= fa_icon 'wrench', text: t('products.features.cms.name'), class: 'fa-fw' %> <%= info_tooltip t('products.features.cms.info') %></li>
            <li><%= fa_icon 'language', text: t('products.features.i18n.name'), class: 'fa-fw' %> <%= info_tooltip t('products.features.i18n.info') %></li>
            <li><%= fa_icon 'commenting', text: t('products.features.live-chat.name'), class: 'fa-fw' %></li>
          </ul>
        </div>
        <div class="card-footer">
          <a class="btn btn-primary" href="#contact"><%= t('products.get') %></a>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="contact" class="wow slideInUp">
  <header class="text-center mb-5">
    <%= content_tag :h2, t('sections.contact.name'), class: 'display-4' %>
    <p class="lead"><%= t('sections.contact.description') %></p>
  </header>
  <form action="https://formspree.io/info@nimbyte.com"
        method="POST">
    <div class="form-group">
      <label for="name"><%= t('contact.name') %></label>
      <input type="text" name="name" id="name" class="form-control">
    </div>
    <div class="form-group">
      <label for="email"><%= t('contact.email') %></label>
      <input type="email" name="_replyto" id="email" class="form-control">
    </div>
    <div class="form-group">
      <label for="message"><%= t('contact.message') %></label>
      <textarea name="message" id="message" rows="3" class="form-control"></textarea>
    </div>
    <input type="hidden" name="_next" value="<%= url_for(action: :thanks) %>" />
    <input type="hidden" name="_subject" value="Nimbyte.com contact form message" />
    <input type="text" name="_gotcha" style="display:none" />
    <button class="btn btn-primary"><%= t('contact.send') %></button>
  </form>
</section>
